/* tabs buttons */

.nav-pills > li > .btn-circle
{
    overflow: hidden;

    width: 42px;
    height: 42px;

    text-align: left;

    opacity: .3;
    color: #337ab7;
    border-radius: 50%;

    transition: width 0.4s ease-in-out, opacity 0.1s ease-in-out,background 0.4s ease-in-out,border-radius 0.4s ease-in-out;
    	-webkit-transition: width 0.4s ease-in-out,opacity 0.1s ease-in-out,background 0.4s ease-in-out,border-radius 0.4s ease-in-out;
    	-moz-transition: width 0.4s ease-in-out,opacity 0.1s ease-in-out,background 0.4s ease-in-out,border-radius 0.4s ease-in-out;
}


.nav-pills > li > .btn-circle::first-letter
{
  

    position: relative;
    top: 50%;

    transform: translateY(-50%);
    letter-spacing: 2em;
    transition:  display 0.1s ease-in-out;
    	-webkit-transition:  display 0.1s ease-in-out;
    	-moz-transition:  display 0.1s ease-in-out;
}

/* tabs buttons */
/* hover */


.nav-pills > li > .btn-circle:hover
{
    width: 200px;

    opacity: 1;
    border-radius: 20px ;
    background: #eee;
}

.nav-pills > li > .btn-circle:hover::first-letter
{
   

    position: fixed;
    top: 50%;

    display: inline;

    transform: translateY(-50%);
    letter-spacing: 0;
}

/* tabs buttons */
/* active */

.nav-pills > .active > .btn-circle
{
    width: 200px;

    opacity: 1;
    color: #eee;
    border-radius: 20px ;
    background: #337ab7;
}



.nav-pills > .active > .btn-circle::first-letter
{
    font-size: 1em;

    position: fixed;
    top: 50%;

    display: inline;

    transform: translateY(-50%);
    letter-spacing: 0;
}

