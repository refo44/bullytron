}

  .quote p {
    color: #555;
    margin: auto;
    font-family: Arial;
    font-size: 18px;
    padding: 0.25em;
}

  .quote p::before{
  content: "\201C";
  font-size: 2em;
  line-height: 0.25em;
  position: relative;
  top: 0.25em;
}

 .quote p::after{
  content: "\201D";
  font-size: 2em;
  line-height: 0.25em;
  position: relative;
  top: 0.25em;
}



